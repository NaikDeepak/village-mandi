{
  "name": "village-mandi-root",
  "private": true,
  "workspaces": ["web", "server", "shared"],
  "scripts": {
    "build": "npm run build --workspace=web && rm -rf public && mv web/dist public && npm run prisma:generate --workspace=server",
    "dev": "npm run dev --workspace=web",
    "dev:server": "npm run dev --workspace=server",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "tsc --noEmit -p web/tsconfig.json && tsc --noEmit -p server/tsconfig.json",
    "prepare": "husky"
  },
  "dependencies": {
    "fastify": "^5.6.2",
    "pino": "^10.1.1",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.57.0",
    "@prisma/client": "^6.19.2",
    "@types/node": "^25.0.8",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prisma": "^6.19.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": ["biome check --write --no-errors-on-unmatched"]
  }
}
